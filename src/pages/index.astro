---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iana Glushach - Bonsai and Ceramics</title>
    
    <!-- Preload Critical Assets -->
    <link rel="preload" href="/assets/icons/ig-logo.svg" as="image">
    <link rel="preload" href="/assets/icons/insta.png" as="image">
    <link rel="preload" href="/assets/icons/facebook.png" as="image">
    
    <!-- Stylesheet -->
    <link rel="stylesheet" href="/assets/css/cookieconsent.css">
    
    <!-- reCAPTCHA -->
    <script src="https://www.google.com/recaptcha/enterprise.js?render=6Le5ZXcqAAAAAG6OhIsAINI2jjhiYeuVFNsrgiKB" async defer></script>
    
    <style>
      .success-message, .error-message {
        display: none;
        margin-top: 20px;
        padding: 15px;
        border-radius: 5px;
        animation: fadeIn 0.5s ease-out forwards;
      }
      .success-message {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
      }
      .error-message {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
      }
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
      }
      #submitButton[disabled] {
        opacity: 0.7;
        cursor: not-allowed;
      }
    </style>
  </head>

  <body>
    <div class="parent">
      <!-- Logo and Text Block -->
      <div class="div2">
        <div class="logo-container">
          <img src="/assets/icons/ig-logo.svg" alt="Company Logo" class="logo-image" />
        </div>
        <div class="text-container">
          <div class="text-block">
            <h2>IANA GLUSHACH</h2>
            <hr class="separator-line" />
            <p class="b-c-text">Bonsai and Ceramics</p>
          </div>
        </div>
      </div>

      <!-- "We Are Coming Soon" -->
      <div class="div6">
        <h2>Our new website is on its way!</h2>
      </div>

      <!-- Tagline -->
      <div class="div7">
        <p class="tagline">We're putting the final touches in place, and we can't wait to share it with you.<br>
          In the meantime, visit our <a href="https://www.etsy.com/shop/IGBonsaiCeramics" target="_blank" class="etsy-store-link">Etsy Store.</a>
        </p>
      </div>

      <!-- Form Section -->
      <div class="div8">
        <form id="subscribeForm" class="subscribe-form">
          <input 
            type="email" 
            name="email" 
            id="emailInput"
            placeholder="Enter your e-mail" 
            aria-label="Email Input" 
            required 
          />
          
          <button type="submit" id="submitButton">Notify Me</button>
        </form>

        <!-- Success Message -->
        <div id="successMessage" class="success-message">
          <h2>Thank you for subscribing!</h2>
          <p>We will notify you when our website launches.</p>
        </div>

        <!-- Error Message -->
        <div id="errorMessage" class="error-message">
          <h2>Submission Error</h2>
          <p id="errorText">Please try again later.</p>
        </div>
      </div>

      <!-- Follow us section -->
      <div class="div9">
        <h3>Follow us on</h3>
      </div>
      <div class="div10">
        <div class="social-icons">
          <a href="https://www.instagram.com/ig_bonsai_ceramics/" target="_blank" aria-label="Instagram">
            <img src="/assets/icons/insta.png" alt="Instagram" />
          </a>
          <a href="https://www.facebook.com/IGbonsaiCeramics/" target="_blank" aria-label="Facebook">
            <img src="/assets/icons/facebook.png" alt="Facebook" />
          </a>
        </div>
      </div>

      <!-- Footer -->
      <div class="div13">
        <footer>
          2024 &copy; Iana Glushach Bonsai and Ceramics - All Rights Reserved
        </footer>
      </div>
    </div>

    <!-- Form Handling Script -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('subscribeForm');
        const button = document.getElementById('submitButton');
        const successMsg = document.getElementById('successMessage');
        const errorMsg = document.getElementById('errorMessage');
        const errorText = document.getElementById('errorText');
        const emailInput = document.getElementById('emailInput');
        
        // Initialize messages as hidden
        successMsg.style.display = 'none';
        errorMsg.style.display = 'none';
        
        form.addEventListener('submit', async (e) => {
          e.preventDefault();
          
          // Reset messages
          successMsg.style.display = 'none';
          errorMsg.style.display = 'none';
          
          // Validate email
          if (!emailInput.value || !emailInput.checkValidity()) {
            errorText.textContent = 'Please enter a valid email address';
            errorMsg.style.display = 'block';
            return;
          }
          
          // Show loading state
          button.disabled = true;
          button.textContent = 'Sending...';
          
          try {
            // Wait for reCAPTCHA to load
            await new Promise((resolve) => {
              if (window.grecaptcha) return resolve();
              const interval = setInterval(() => {
                if (window.grecaptcha) {
                  clearInterval(interval);
                  resolve();
                }
              }, 100);
            });

            // Get reCAPTCHA token
document.addEventListener("DOMContentLoaded", function () {
